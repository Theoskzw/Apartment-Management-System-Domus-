<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Domus - Login</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
    }

    body {
      background-color: #f5f5f5;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      background-color: #ffffff;
      border-radius: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 30px;
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    .login-container .logo {
      font-size: 35px;
      font-weight: bold;
      color: #AC73D6;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 20px;
    }

    .login-container .logo span {
      color: #a0d6b4;
      margin-left: 5px;
    }

    .login-container h2 {
      margin-bottom: 20px;
      color: #36454F;
    }

    .login-container form {
      display: flex;
      flex-direction: column;
    }

    .login-container input {
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
    }

    .login-container .role-selection {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 15px;
    }

    .login-container .role-selection label {
      font-size: 16px;
      cursor: pointer;
    }

    .login-container button {
      padding: 10px;
      background-color: #a0d6b4;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 10px;
    }

    .login-container button:hover {
      background-color: #AC73D6;
    }

    .login-container a {
      color: #808080;
      text-decoration: none;
      font-size: 14px;
      margin-top: 10px;
      display: block;
    }

    .login-container a:hover {
      text-decoration: underline;
    }
  </style>
  <script>
    function handleLogin() {
      let userType = document.querySelector('input[name="role"]:checked').value;
      if (userType === "user") {
        window.location.href = "user_dashboard.html"; // Redirect to user page
      } else if (userType === "admin") {
        window.location.href = "admin_dashboard.html"; // Redirect to admin page
      }
    }
  </script>
</head>
<body>
  <div class="login-container">
    <div class="logo">
      DOM<span>US</span>
    </div>
    <h2>Login to Your Account</h2>
    
    <!-- User or Admin Selection -->
    <div class="role-selection">
      <label><input type="radio" name="role" value="user" checked> User</label>
      <label><input type="radio" name="role" value="admin"> Admin</label>
    </div>

    <form action="/login" method="POST">
      <input type="text" name="username" placeholder="Username" required>
      <input type="password" name="password" placeholder="Password" required>
      <input type="email" name="email" placeholder="Email Address" required>
      <button type="submit">Login</button>
    </form>

    <a href="#">Forgot your password?</a>
    <a href="/signup">Create an account</a>
  </div>
</body>
</html>